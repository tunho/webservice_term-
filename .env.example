# Server Configuration
ENV=development
DEBUG=true
PROJECT_NAME="Calendar Suite"
VERSION=0.1.0
API_V1_STR=/api/v1

# Database (MySQL)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=calendar_user
MYSQL_PASSWORD=calendar_password
MYSQL_DB=calendar_suite

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Security & Auth
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRES_MIN=30
JWT_REFRESH_EXPIRES_DAYS=7

# Firebase (Service Account Key Path)
FIREBASE_SERVICE_ACCOUNT_JSON=/app/firebase-adminsdk.json

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8080/api/v1/auth/google/callback

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
